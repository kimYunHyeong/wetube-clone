extends ../base

block content
    h4 Upload Video
    if errorMessage
        span= errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", accpet="video/*",required, id="video", name="video")
        input(placeholder="Title",required, type="text" name="title", maxlength=80)
        input(placeholder="Description",required, type="text" name="description",minlength=20)
        input(placeholder="Hash tags, separated by comma",required, type="text" name="hashTags")
        input(type="submit" value="Upload Video")